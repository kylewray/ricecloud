[colors]
background = #00000000
foreground = ${xrdb:color7:#ffffff}
text = #ffffff
highlight = ${xrdb:color8:#ffffff}
accent = ${xrdb:color10:#119911}
warning = ${xrdb:color9:#991111}


[bar/ricecloud]
background = ${colors.background}
foreground = ${colors.foreground}

width = 100%
height = 24
fixed-center = false

modules-left = openbox
modules-center = date
modules-right = volume backlight battery wlan

;modules-left = mpd
;modules-right = cpu temperature memory filesystem eth 

line-size = 4
line-color = $

border-top-size = 6
border-bottom-size = 6
border-color = ${colors.foreground}

module-margin-left = 2
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

scroll-up = wmctrl -s $(read asdf <<< $(wmctrl -d | grep "*" | awk '{print $1}'); expr $asdf - 1)
scroll-down = wmctrl -s $(read asdf <<< $(wmctrl -d | grep "*" | awk '{print $1}'); expr $asdf + 1)


[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-underline= ${colors.highlight}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.foreground-alt}
label-mode-background = ${colors.highlight}

label-focused = F %index%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

label-unfocused = U %index%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

label-visible = V %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-background}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %index%!
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}


